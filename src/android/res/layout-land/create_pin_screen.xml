<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/screen_container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#fff">

  <!-- header -->
  <RelativeLayout
    android:id="@+id/screen_header"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_alignParentTop="true"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
      android:id="@+id/pin_logo"
      android:src="@drawable/logo"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:scaleType="fitXY"
      android:layout_centerVertical="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"/>

    <TextView
      android:id="@+id/help_button"
      android:text="Help?"
      android:textColor="#72994d"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:textSize="18sp"/>

  </RelativeLayout>

  <!-- body -->
  <RelativeLayout
    android:id="@+id/screen_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/screen_header"
    android:background="#f0f0f0"
    android:padding="15dp">

    <LinearLayout
      android:id="@+id/steps_marker"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/step_marker_1"
        style="@style/PinKeyboardStepMarker"
        android:text="1"/>

      <TextView
        android:id="@+id/step_marker_2"
        style="@style/PinKeyboardStepMarker"
        android:text="2"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"/>

      <TextView
        android:id="@+id/step_marker_3"
        style="@style/PinKeyboardStepMarker"
        android:text="3"/>
    </LinearLayout>

    <TextView
      android:id="@+id/pin_screen_title"
      android:text="Log in"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:textColor="#7f6c66"
      android:layout_alignParentTop="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_toStartOf="@id/steps_marker"/>

    <RelativeLayout
      android:background="#FFF"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_below="@+id/pin_screen_title"
      android:layout_marginTop="15dp"
      android:padding="15dp">

      <TextView
        android:id="@+id/pin_info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Label text lorem ipsum"
        android:textColor="#373f4a"
        android:layout_marginBottom="10dp"/>

      <!-- Keyboard container -->
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="15dp">

          <TextView
            android:id="@+id/pin_keyboard_title"
            android:text="Log in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#7f6c66"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

          <TextView
            android:id="@+id/pin_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample error message"
            android:textColor="#F00"
            android:textSize="12sp"
            android:layout_below="@+id/pin_keyboard_title"
            android:visibility="gone"
            android:layout_alignEnd="@+id/pin_input"
            android:layout_alignStart="@+id/pin_input"/>

          <LinearLayout
            android:id="@+id/pin_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_below="@+id/pin_error_message"
            android:layout_marginTop="5dp">

            <TextView
              android:id="@+id/pin_input_0"
              style="@style/PinKeyboardInputFieldTablet"/>

            <TextView
              android:id="@+id/pin_input_1"
              style="@style/PinKeyboardInputFieldTablet" />

            <TextView
              android:id="@+id/pin_input_2"
              style="@style/PinKeyboardInputFieldTablet" />

            <TextView
              android:id="@+id/pin_input_3"
              style="@style/PinKeyboardInputFieldTablet" />

            <TextView
              android:id="@+id/pin_input_4"
              style="@style/PinKeyboardInputFieldTablet" />

          </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/keyboard" />

      </LinearLayout>
    </RelativeLayout>
  </RelativeLayout>
</RelativeLayout>