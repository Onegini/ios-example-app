<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/screen_container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/onegini_gray">

  <!-- header -->
  <RelativeLayout
    android:id="@+id/screen_header"
    android:background="@color/onegini_blue"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_alignParentTop="true"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
      android:id="@+id/pin_logo"
      android:src="@drawable/onegini_logo"
      android:layout_width="wrap_content"
      android:layout_height="32dp"
      android:scaleType="fitStart"
      android:layout_centerVertical="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"/>

    <TextView
      android:id="@+id/help_button"
      android:text="Help?"
      android:textColor="#FFF"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:textSize="18sp"/>

  </RelativeLayout>

  <!-- body -->
  <RelativeLayout
    android:id="@+id/screen_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/screen_header"
      android:padding="15dp">

    <Button
        android:id="@+id/pin_forgotten_label"
        android:text="Did you forget your pincode?"
        android:textColor="@color/onegini_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"/>

    <!-- Keyboard container -->
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="#FFF"
      android:layout_centerInParent="true"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
          android:id="@+id/pin_screen_title"
          android:text="Log in"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="24sp"
          android:textColor="#666"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"/>

        <LinearLayout
          android:id="@+id/pin_input"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textAlignment="center"
          android:layout_below="@id/pin_screen_title"
          android:layout_marginTop="10dp">

          <TextView
            android:id="@+id/pin_input_0"
            style="@style/PinKeyboardInputFieldTablet"/>

          <TextView
            android:id="@+id/pin_input_1"
            style="@style/PinKeyboardInputFieldTablet" />

          <TextView
            android:id="@+id/pin_input_2"
            style="@style/PinKeyboardInputFieldTablet" />

          <TextView
            android:id="@+id/pin_input_3"
            style="@style/PinKeyboardInputFieldTablet" />

          <TextView
            android:id="@+id/pin_input_4"
            style="@style/PinKeyboardInputFieldTablet" />
        </LinearLayout>

        <TextView
          android:id="@+id/pin_error_message"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Sample error message"
          android:textColor="#666"
          android:layout_below="@+id/pin_input"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="10dp"
          android:visibility="invisible"
          android:layout_alignEnd="@+id/pin_input"
          android:layout_alignStart="@+id/pin_input"/>

      </RelativeLayout>

      <include
          layout="@layout/keyboard"
          android:id="@+id/pin_keyboard" />

    </LinearLayout>
  </RelativeLayout>
</RelativeLayout>